{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noUncheckedIndexedAccess": true,
        "types": ["vite/client", "node"],
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "emitDeclarationOnly": true,
        "declarationMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
